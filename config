#!/usr/bin/env bash
_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
export EDGEDB_IMAGE=${EDGEDB_IMAGE:="$(awk -F '[ :]' '{print $2}' "${_DIR}/Dockerfile")"}
export EDGEDB_IMAGE_VERSION=${EDGEDB_IMAGE_VERSION:="$(awk -F '[ :]' '{print $3}' "${_DIR}/Dockerfile")"}
export EDGEDB_ROOT=${EDGEDB_ROOT:="$DOKKU_LIB_ROOT/services/edgedb"}
export DOKKU_LIB_HOST_ROOT=${DOKKU_LIB_HOST_ROOT:=$DOKKU_LIB_ROOT}
export EDGEDB_HOST_ROOT=${EDGEDB_HOST_ROOT:="$DOKKU_LIB_HOST_ROOT/services/edgedb"}

export PLUGIN_UNIMPLEMENTED_SUBCOMMANDS=()
export PLUGIN_COMMAND_PREFIX="edgedb"
export PLUGIN_CONFIG_ROOT=${PLUGIN_CONFIG_ROOT:="$DOKKU_LIB_ROOT/config/$PLUGIN_COMMAND_PREFIX"}
export PLUGIN_DATA_ROOT=$EDGEDB_ROOT
export PLUGIN_DATA_HOST_ROOT=$EDGEDB_HOST_ROOT
export PLUGIN_DATASTORE_PORTS=(5656)
export PLUGIN_DATASTORE_WAIT_PORT=5656
export PLUGIN_DATASTORE_WAIT_TIME=120
export PLUGIN_DEFAULT_ALIAS="EDGEDB"
export PLUGIN_CONFIG_DIRECTORY="/edgedb-config"
export PLUGIN_DISABLE_PULL=${EDGEDB_DISABLE_PULL:=}
export PLUGIN_DISABLE_PULL_VARIABLE="EDGEDB_DISABLE_PULL"
export PLUGIN_ALT_ALIAS="DOKKU_EDGEDB"
export PLUGIN_IMAGE=$EDGEDB_IMAGE
export PLUGIN_IMAGE_VERSION=$EDGEDB_IMAGE_VERSION
export PLUGIN_CLI_IMAGE="edgedb/edgedb-cli:2.2.6"
export PLUGIN_SCHEME="edgedb"
export PLUGIN_SERVICE="Edgedb"
export PLUGIN_VARIABLE="EDGEDB"
export PLUGIN_BASE_PATH="$PLUGIN_PATH"
export PLUGIN_CONFIG_SUFFIX="data"
if [[ -n $DOKKU_API_VERSION ]]; then
  export PLUGIN_BASE_PATH="$PLUGIN_ENABLED_PATH"
fi

export PLUGIN_BUSYBOX_IMAGE="busybox:1.34.1-uclibc"
export PLUGIN_AMBASSADOR_IMAGE="dokku/ambassador:0.5.0"
export PLUGIN_S3BACKUP_IMAGE="dokku/s3backup:0.14.0"
export PLUGIN_WAIT_IMAGE="dokku/wait:0.6.0"

export EDGEDB_CONFIG_OPTIONS=${EDGEDB_CONFIG_OPTIONS:=""}
